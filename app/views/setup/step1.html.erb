<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box bordered">
        <div class="box-header">
          <i class="icon-sitemap"></i> <%= t(:setup) %>
        </div>
        <%= form_for @widget, :url => create_setup_path(:id => :step2), :method => :pos do |f| %>

            <div class="row-fluid">
              <div class="span6">
                <div class="padded">
                  <div class="section-title">
                    <%= t(:personal_details) %>
                  </div>
                  <div class="vpadded">
                    <div class="input full-width">
                      <%= text_field_tag "user[firstname]", @current_user.firstname, :placeholder => t(:firstname) %>
                    </div>
                    <div class="input full-width">
                      <%= text_field_tag "user[lastname]", @current_user.lastname, :placeholder => t(:lastname) %>
                    </div>
                    <div class="input full-width">
                      <%= text_field_tag "store[phone]", @store.phone, :placeholder => t(:phone_number) %>
                    </div>
                    <div class="input full-width">
                      <%= text_field_tag "store[email]", @store.email, :placeholder => t(:email_of_site) %>
                    </div>
                  </div>
                </div>
              </div>


              <div class="span6">
                <div class="padded">
                  <div class="section-title">
                    <%= t(:webpage_details) %>
                  </div>
                  <div class="vpadded">
                    <div class="input full-width">
                      <%= text_field_tag "store[name]", @store.name, :placeholder => t(:name_of_site) %>
                    </div>

                    <%= f.fields_for :widget_domains do |d| %>
                        <div class="input  full-width">
                          <%= d.text_field :domain, :placeholder => "ex. talkycloud.com" %>
                        </div>
                    <% end %>

                    <div class="input full-width">
                      <%= f.select :category_id, Category.where(:category_type => :widget).collect { |c| [c.name, c.id] }, {}, :class => "chzn-select" %>
                    </div>

                    <div class="clearfix" style="margin-top:15px;">
                      <label class="checkbox">
                        <%= f.check_box :approval_required %> <%= t(:approval_required) %>
                      </label>
                      <label class="checkbox">
                        <%= f.check_box :login_required %>
                        <%= t(:login_required) %>
                      </label>
                    </div>




                    <% unless @widget.new_record? %>
                        <p><i class="icon-info-sign"></i>
                          <b><%= t(:please_copy_and_paste) %> </b></p>
                    <% end %>
                    <div class="well" style="display: none;">

                    </div>

                  </div>
                </div>
              </div>
            </div>


            <div class="row-fluid">
              <div class="span6 pull-right">
                <div class="padded">
                  <div class="vpadded pull-right">
                    <%= f.submit t(:save_and_continue), :class => "btn medium-blue" %>
                    <!--<%= link_to "Cancel", admin_widgets_path %>-->
                  </div>
                </div>
              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
    section#main {
        overflow: visible !important;
    }
</style>





