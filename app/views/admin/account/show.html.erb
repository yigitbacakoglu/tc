<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box bordered">
        <div class="box-header">
          <i class="icon-user"></i> My Account
        </div>
        <%= form_for @user_registration, :url => admin_account_path, :method => :put, :html => {:class => "mainForm"} do |f| %>

            <div class="row-fluid">

              <div class="span6">
                <div class="padded">
                  <div class="section-title">
                    Profile
                  </div>
                  <div class="vpadded">
                    <%= f.fields_for :user do |usr| %>
                        <div class="input full-width">
                          <%= usr.text_field :firstname, :placeholder => 'Firstname' %>
                        </div>
                        <div class="input full-width">
                          <%= usr.text_field :lastname, :placeholder => 'Lastname' %>
                        </div>
                        <div class="input full-width">
                          <%= f.email_field :email, :placeholder => 'Email' %>
                        </div>
                    <% end %>

                  </div>
                </div>
              </div>
              <div class="span6">
                <div class="padded">
                  <div class="section-title">
                    Change Password
                  </div>
                  <div class="vpadded">
                    <div class="input full-width">

                      <%= f.password_field :password, :placeholder => "Password" %>
                    </div>
                    <div class="input full-width">

                      <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation' %>
                    </div>

                  </div>

                </div>
              </div>
              <div class="padded">
                <div class="vpadded">
                  <div class="clearfix"></div>
                  <%= f.submit "Update", :class => "btn medium-blue" %> or
                  <%= link_to "Cancel", admin_path %>
                </div>

                <%= render :partial => 'shared/social' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div id="widget_form" style="display:none">
  <%= form_for @user_registration, :url => admin_account_path, :remote => true, :method => :put, :html => {:class => "mainForm"} do |f| %>
      <fieldset>
        <legend><%= t(:new_password) %> </legend>
        <div class="rowElem">
          <%= f.label :password, t(:password) %>
          <div class="formRight">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="rowElem">
          <%= f.label :password_confirmation, t(:confirm_password) %>
          <div class="formRight">
            <%= f.password_field :password_confirmation, :class => 'title' %>
          </div>
        </div>
        <div class="fix"></div>
        <div class="submitForm">
          <%= f.submit t(:update), :disable_with => t('payment_states.processing'), :class => "button button-blue button-big" %> <%= t(:or) %>
          <%= link_to t(:cancel), admin_account_path %>
          <%= hidden_field_tag 'new_password', 'new_password' %>
        </div>

      </fieldset>
  <% end %>
</div>
