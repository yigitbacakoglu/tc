<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">

      <div class="box bordered">
        <div class="box-header">
          <i class="icon-microformats">&nbsp; <%= t(:widgets) %></i>
          <%= link_to_with_icon "icon-white icon-plus", t(:new_widget) ,new_admin_widget_url, :class => "btn btn-success pull-right" %>
        </div>
        <div class="row-fluid padded">

        <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(:domains) %></th>
              <th><%= t(:category) %></th>
              <th><%= t(:actions) %></th>
            </tr>
            </thead>
            <tbody>
            <% @widgets.each do |widget| %>
                <% identifier = rand(19031903) %>
                <tr id="<%= identifier %>">
                  <td>
                    <%= widget.widget_domains.map(&:domain).join(' | ') %>
                  </td>
                  <td style="line-height: 24px;">
                    <%= widget.category.try(:name) %>
                  </td>
                  <td>
                    <%= link_to_with_icon "icon-pencil", t(:edit), edit_admin_widget_path(widget), :class => "btn dark-blue" %>
                    <%= link_to_delete widget, :url => admin_widget_path(widget, :dom_id => identifier), :class => "btn red" %>
                  </td>
                </tr>
            <% end %>

            </tbody>
          </table>
        </div>
        </div>
    </div>
  </div>
</div>
