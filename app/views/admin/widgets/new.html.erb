<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box bordered">
        <div class="box-header">
          <i class="icon-sitemap"></i> <%= t(:new_widget) %>
        </div>
        <%= form_for [:admin, @widget] do |f| %>
            <%= render :partial => "form", :locals => {:f => f} %>
            <div class="row-fluid">
              <div class="span6">
                <div class="padded">
                  <div class="vpadded">
                    <%= f.submit t(:create), :class => "btn medium-blue" %> <%= t(:or) %>
                    <%= link_to t(:cancel), admin_widgets_path %>
                  </div>
                </div>
              </div>
            </div>

      <% end %>
      </div>
    </div>
  </div>
</div>





