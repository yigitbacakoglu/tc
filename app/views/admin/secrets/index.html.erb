<div class="container-fluid">
<div class="row-fluid">
  <div class="box">
  <div class="box-content">
<h1>Listing secrets</h1>

<table class="table table-bordered">
  <tr>
    <th>Provider</th>
    <th>Key</th>
    <th>Secret</th>
  </tr>

  <% @secrets.each do |secret| %>
      <tr>
        <td><%= secret.provider %></td>
        <td><%= secret.api_key %></td>
        <td><%= secret.api_secret %></td>
        <td><%= link_to 'Edit', edit_admin_secret_path(secret) %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Secret', new_admin_secret_path %>
</div>
</div>
</div>
</div>