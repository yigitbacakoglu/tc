<%= javascript_include_tag "tagit" %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="box bordered">
        <div class="box-header">
          <i class="icon-sitemap"></i> Settings
        </div>
        <%= form_for @current_store, :url => admin_setting_path(@current_store), :method => :put do |f| %>


            <div class="row-fluid">
              <div class="span12">
                <div class="padded">

                  <div class="section-title">
                    Restricted Words
                  </div>

                  <div class="vpadded">
                    <div class="input ">
                      <ul id="myTags" class="tag-list">
                        <!-- Existing list items will be pre-added to the tags -->
                        <% @current_store.restricted_words.each do |rw| %>
                            <li><%= rw.value %></li>
                        <% end %>
                      </ul>
                    </div>

                  </div>


                </div>
              </div>

            </div>


            <div class="row-fluid">
              <div class="span6">
                <div class="padded">
                  <div class="vpadded">
                    <%= f.submit "Update", :class => "btn medium-blue", :disable_with => "Processing..." %>
                  </div>
                </div>
              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>




<script>
    $(function () {

        $("#myTags").tagit({
            availableTags: ["c++", "java", "php", "javascript", "ruby", "python", "c"],
            fieldName: "restricted_words[]",
            allowSpaces: true
        });

    })
</script>
<style>


    .tags {
        width: inherit;
        height: 0;
        position: absolute;
        padding: 0;
        margin: 0;
    }

    .tagit-choice {
        display: inline-block;
        padding: 1px 3px;
        font-size: 11.844px;
        font-weight: bold;
        line-height: 20px;
        color: white;
        margin: 3px;
        float: left;
        vertical-align: baseline;
        white-space: nowrap;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
        background-color: #999999;
    }

    .ui-icon.ui-icon-close {
        display: none;
    }

    .tag a {
        margin-left: 3px;

    }

    .tagit-choice {
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
    }

    li.tagit-new {
        bottom: 0px;
    }
</style>


