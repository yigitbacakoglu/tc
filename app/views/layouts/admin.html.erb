<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <!-- Use title if it's in the page YAML frontmatter -->
  <title>TalkyCloud</title>

  <%= stylesheet_link_tag "admin/application" %>
  <%= stylesheet_link_tag "admin/font-awesome" %>
  <%= javascript_include_tag "admin/application" %>
  <%= javascript_include_tag "admin/common" %>
  <%= javascript_include_tag "jquery_ujs" %>
  <%= yield :head %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">

  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">

  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!-- there's an IE separated stylesheet with the following resets for IE -->
  <!--[if lte IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <%= javascript_include_tag "admin/html5shiv" %>
  <%= javascript_include_tag "admin/excanvas" %>
  <%= javascript_include_tag "admin/ie_fix" %>
  <%= stylesheet_link_tag "admin/ie_fix" %>
  <![endif]-->
  <%= csrf_meta_tags %>
</head>

<body>
<%= render :partial => "shared/left_nav" %>
<%= render :partial => "shared/top_nav" %>

<section id="main">
  <%= render :partial => "shared/flashes" %>


  <div class="modal fade hide" id="defaultModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="default-modal-header">.</h3>
    </div>
    <div id="default-modal-body" class="modal-body">
      <p class='loading'><%= t(:loading) %></p>
    </div>
    <div id="default-modal-footer" class="modal-footer">
      <%= link_to t(:close), "#", "data-dismiss" => "modal", :class => "btn", "aria-hidden" => true %>
    </div>
  </div>

  <%= yield %>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">

        <div class="box footer">
          <div class="copyright text-transparent center">
            <div>2013 &copy; TalkyCloud</div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>


<!-- Modal dialog used for the image gallery -->
<div id="modal-gallery" class="modal modal-gallery hide fade" tabindex="-1">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>

    <h3 class="modal-title"></h3>
  </div>
  <div class="modal-body">
    <div class="modal-image"></div>
  </div>
  <div class="modal-footer">
    <a class="btn modal-download light-blue inverse" target="_blank"><i class="icon-download"></i> Download</a>
    <a class="btn modal-play modal-slideshow" data-slideshow="5000"><i class="icon-play icon-white"></i> Slideshow</a>
    <a class="btn modal-prev medium-blue"><i class="icon-arrow-left icon-white"></i> Previous</a>
    <a class="btn modal-next medium-blue">Next <i class="icon-arrow-right icon-white"></i></a>
  </div>
</div>

</body>
</html>
<!-- Localized -->
